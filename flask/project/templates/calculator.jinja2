         </tr>
      </fieldset>

      <h3 class="subtitle">Predictions</h3>
      <table>

      {% for key in predictions %}
      <tr>
         {# split key for formatting #}
         {% set names = key.split('_') %}
         <td>
         {{ names[0]|upper }} Score: 
         </td>
         <td>
         {{'%0.3f'|format(predictions[key]|float)}}
         </td>
      </tr>
      {% endfor %}
      </table>


      {{ form.submit }}
   </form>
</div>

{% endblock %}