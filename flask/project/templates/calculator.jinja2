         </tr>
      </fieldset>

      <fieldset class="form-field">
         <tr> {{ form.pre_diaphr.label }}
            {{ form.pre_diaphr }}
         </tr>
      </fieldset>
      <fieldset class="form-field">
         <tr> {{ form.pre_splen.label }}
            {{ form.pre_splen }}
         </tr>
      </fieldset>
      <fieldset class="form-field">
         <tr> {{ form.pre_liver.label }}
            {{ form.pre_liver }}
         </tr>
      </fieldset>
      <fieldset class="form-field">
         <tr> {{ form.pre_lar.label }}
